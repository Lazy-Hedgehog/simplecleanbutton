<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="FancyButtonsAttrs">
        <attr name="defaultColor" format="color"  />
        <attr name="text" format="string"  />

        <attr name="textColor" format="color"  />

        <attr name="textFont" format="string"  />
        <attr name="iconFont" format="string"  />

        <attr name="textSize" format="dimension"  />
        <attr name="iconResource" format="integer"  />
        <attr name="fontIconResource" format="string"  />
        <attr name="fontIconSize" format="dimension"  />
        <attr name="iconPosition" format="enum">
            <enum name="left" value="1" />
            <enum name="right" value="2" />
            <enum name="top" value="3" />
            <enum name="bottom" value="4" />
        </attr>
        <attr name="borderColor" format="color" />
        <attr name="borderWidth" format="dimension"/>
        <attr name="focusColor" format="color" />
        <attr name="radius" format="dimension" />
    </declare-styleable>

    <declare-styleable name="MarkView">
        <attr name="mv_strokeWidth" format="dimension" />
        <attr name="mv_strokeColors" format="reference" />
        <attr name="mv_ringColor" format="color" />
        <attr name="mv_ringWidth" format="dimension" />
        <attr name="mv_textColor" format="color" />
        <attr name="mv_textSize" format="dimension" />
        <attr name="mv_mark" format="integer" />
        <attr name="mv_max" format="integer" />
    </declare-styleable>
</resources> 